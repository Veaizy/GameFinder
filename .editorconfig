# The purpose of .editorconfig files are explained on https://docs.microsoft.com/en-us/visualstudio/ide/create-portable-custom-editor-options

# top-most EditorConfig file
root = true

# Windows-style newlines with a newline ending every file
[*]
end_of_line = crlf
trim_trailing_whitespace = true
insert_final_newline = true

# enforce C# standard style https://learn.microsoft.com/en-us/dotnet/fundamentals/code-analysis/code-style-rule-options from https://www.reddit.com/r/dotnet/comments/pbhhey/looking_for_a_community_standard_editorconfig/
[*.cs]
indent_style = space
indent_size = 4
csharp_new_line_before_open_brace = all
csharp_space_after_keywords_in_control_flow_statements = true
